<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/drawable_custom_dialog_background"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/mute_notifications_for"
            android:textColor="@color/previewMainText"
            android:textSize="20sp" />

<!--        Number selector-->

        <NumberPicker
            android:id="@+id/muteTimePicker"
            android:theme="@style/NumberPickerStyle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/confirmButton"
            style="@style/wfButton"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/muteTimePicker"
            android:text="@string/confirm"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>