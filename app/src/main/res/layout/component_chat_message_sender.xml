<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chatMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="325dp"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:background="@drawable/drawable_chat_message_sender"
        android:textColor="@color/previewMainText"/>

    <TextView
        android:id="@+id/chatMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/chatMessageText"
        android:textSize="12sp"
        android:textColor="@color/previewMainText"/>

</RelativeLayout>