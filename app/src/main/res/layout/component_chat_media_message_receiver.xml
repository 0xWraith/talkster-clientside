<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/chatMessageView"
        android:layout_width="325dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/drawable_chat_message_receiver"
        android:maxWidth="325dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/chatMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/chat_outTimeText"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatMessageView" />

    <Button
        android:id="@+id/chatFileButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drawable_media_outline"
        android:drawableLeft="@drawable/image_48"
        android:drawableTint="?attr/chat_messageTextIn"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="file.png"
        android:textColor="?attr/chat_messageTextIn"
        app:layout_constraintBottom_toBottomOf="@+id/chatMessageView"
        app:layout_constraintEnd_toEndOf="@+id/chatMessageView"
        app:layout_constraintStart_toStartOf="@+id/chatMessageView"
        app:layout_constraintTop_toTopOf="@+id/chatMessageView" />

</androidx.constraintlayout.widget.ConstraintLayout>