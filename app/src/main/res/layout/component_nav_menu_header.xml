<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navHeader"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="?attr/chat_backgroundImage"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userNavbarAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/account_circle_64"
        app:layout_constraintBottom_toTopOf="@+id/userNavbarName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImage"
        app:strokeColor="@null" />

    <TextView
        android:id="@+id/userNavbarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="wraith"
        android:textColor="?attr/navBarText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userNavbarAvatar"
        app:layout_constraintTop_toBottomOf="@+id/userNavbarAvatar" />

    <TextView
        android:id="@+id/userNavbarEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="d.dzhuhaaa@gmail.com"
        android:textColor="?attr/navBarSubText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/userNavbarName"
        app:layout_constraintTop_toBottomOf="@+id/userNavbarName" />

</androidx.constraintlayout.widget.ConstraintLayout>