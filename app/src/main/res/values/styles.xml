<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wfButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cornerRadius">5dp</item>
        <item name="android:background">@drawable/drawable_button_gradient</item>
        <item name="android:textColorHint">?attr/button_textColor</item>
        <item name="android:textColor">?attr/button_textColor</item>
        <item name="android:textColorHintInverse">?attr/button_textColor</item>
        <item name="android:textColorHighlight">?attr/button_textColor</item>
        <item name="drawableTint">?attr/button_iconColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:background">?attr/actionBarDefault</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="dialogCancelButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">?attr/errorColor</item>
        <item name="android:textColor">?attr/errorColor</item>
        <item name="android:textColorHintInverse">?attr/errorColor</item>
        <item name="android:textColorHighlight">?attr/errorColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="dialogAcceptButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/aurora_4</item>
        <item name="android:textColor">@color/aurora_4</item>
        <item name="android:textColorHintInverse">@color/aurora_4</item>
        <item name="android:textColorHighlight">@color/aurora_4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>


        <!-- Edit this colorControlNormal value as you need -->
        <item name="colorControlNormal">#fff</item>
<!--        Change control height-->

        <item name="android:textColorPrimary">@color/previewMainText</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:fontFamily">sans-serif-medium</item>-->
    </style>
    
    <style name="dialogCheckBox">
        <item name="buttonTint">@color/checkbox_state</item>
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginStart">-5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/drawable_input</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/previewSecondaryText</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">#FFFFFF</item>
    </style>

    <style name="aspectImage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="LoginMailEditText">
        <item name="android:background">@drawable/drawable_input</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/previewSecondaryText</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="android:textColorHighlight">?attr/chat_TextCursorSelection</item>
        <item name="android:textCursorDrawable">@drawable/drawable_input_cursor</item>
<!--        <item name="android:backgroundTint">@color/inputLoginCodeDark</item>-->
    </style>

    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="PrivateChat.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@color/gunmetal</item>
    </style>

    <style name="SettingsBlock">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/windowBackgroundWhite</item>
    </style>

    <style name="SettingsBlockItem">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_chat_border</item>
    </style>

    <style name="SettingsBlockItem.Icon">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="SettingsBlockText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">?attr/settings_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsBlockSubtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">?attr/settings_subText</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsBlockInput">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">?attr/settings_text</item>
        <item name="android:textColorHint">?attr/settings_subText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">?attr/settings_text</item>
        <item name="android:textColorHighlight">?attr/chat_TextCursorSelection</item>
        <item name="android:textCursorDrawable">@drawable/drawable_input_cursor</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="SettingsBlockInput.Biography">

    </style>


    <style name="SettingsHeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/settings_actionTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsBlockIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="tint">?attr/settings_iconColor</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

