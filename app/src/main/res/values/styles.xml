<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wfButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundTint">@color/mainBlue</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColorHint">@color/previewMainText</item>
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textColorHintInverse">@color/previewMainText</item>
        <item name="android:textColorHighlight">@color/mainBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
</resources>