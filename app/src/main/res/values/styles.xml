<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wfButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cornerRadius">5dp</item>
        <item name="android:textColorHint">@color/previewMainText</item>
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textColorHintInverse">@color/previewMainText</item>
        <item name="android:textColorHighlight">@color/aquamarine</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="dialogCancelButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">?attr/errorColor</item>
        <item name="android:textColor">?attr/errorColor</item>
        <item name="android:textColorHintInverse">?attr/errorColor</item>
        <item name="android:textColorHighlight">?attr/errorColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="dialogAcceptButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/aurora_4</item>
        <item name="android:textColor">@color/aurora_4</item>
        <item name="android:textColorHintInverse">@color/aurora_4</item>
        <item name="android:textColorHighlight">@color/aurora_4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>


        <!-- Edit this colorControlNormal value as you need -->
        <item name="colorControlNormal">#fff</item>
<!--        Change control height-->

        <item name="android:textColorPrimary">@color/previewMainText</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:fontFamily">sans-serif-medium</item>-->
    </style>
    
    <style name="dialogCheckBox">
        <item name="buttonTint">@color/checkbox_state</item>
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginStart">-5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="aspectImage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="LoginMailEditText">
        <item name="android:background">@drawable/drawable_input_mail</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/previewSecondaryText</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">#FFFFFF</item>
        <item name="android:textColorHighlight">?attr/chat_TextCursorSelection</item>
        <item name="android:textCursorDrawable">@drawable/drawable_input_cursor</item>
<!--        <item name="android:backgroundTint">@color/inputLoginCodeDark</item>-->
    </style>

    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PrivateChat.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@color/gunmetal</item>
    </style>

