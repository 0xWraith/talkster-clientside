<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wfButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/drawable_button_gradient</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColorHint">@color/previewMainText</item>
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textColorHintInverse">@color/previewMainText</item>
        <item name="android:textColorHighlight">@color/aquamarine</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/previewMainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/drawable_input</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/previewSecondaryText</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">#FFFFFF</item>
    </style>

    <style name="aspectImage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="LoginMailEditText">
        <item name="android:background">@drawable/drawable_input</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/previewSecondaryText</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">#FFFFFF</item>
<!--        <item name="android:backgroundTint">@color/inputLoginCodeDark</item>-->
    </style>

    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="customToast">
        <item name="stColorBackground">@color/aquamarine</item>
        <item name="stTextColor">@android:color/white</item>
        <item name="stTextBold">true</item>
        <item name="stRadius">10dp</item>
        <item name="stLength">LONG</item>
    </style>

    <style name="pictureRemoved" parent="customToast">
        <item name="stIconStart">@drawable/delete_24</item>
    </style>

    <style name="friendAdded" parent="customToast">
        <item name="stIconStart">@drawable/person_add_24</item>
    </style>

    <style name="friendAlreadyAdded" parent="customToast">
        <item name="stIconStart">@drawable/check_24</item>
    </style>

    <style name="friendNotFound" parent="customToast">
        <item name="stIconStart">@drawable/close_24</item>
    </style>

</resources>